<div class="container d-flex flex-column ">
<% if current_user%>
  <div class="container d-flex flex-column">
  <% @groups.each do |group| %> 
  <div class="card bg-light mb-3" style="max-height: 18rem;">
  <div class="card-body d-flex justify-content-between">
    <h5 class="card-title"><%= group.icon %></h5>
    <p class="card-text"><%= link_to group.name, group_entities_path(group)%></p>
    <p class="card-text"><%= total_amout(group)%></p>
  </div>
</div>
  <% end %>
  </div>

  <div class="container ">
    <%= link_to new_group_path(current_user) do %>
    <button class="btn btn-success btn-lg btn-block green_button" >Add category</button>
   <% end %>
    </div>
<% else %>

<div class="container">
<div class="d-flex justify-content-center main_message">
  <div class="d-flex flex-column pb-5">
     <h1>Manage Your Budget</h1>
  <i class="fa-solid fa-sack-dollar fa-10x fa-flip" style="--fa-animation-duration: 3s;" ></i>
  </div>
 
</div>
  <div class="d-flex flex-column not_login">
  <%= link_to "Sign in", new_user_session_path, :class => "btn btn-primary btn-lg btn-block mb-2 blue_button" %>
  <%= link_to "Sign Up", new_user_registration_path, :class => "btn btn-primary btn-lg btn-block mb-2 blue_button" %>
  <div>
</div>

<% end %>
</div>

